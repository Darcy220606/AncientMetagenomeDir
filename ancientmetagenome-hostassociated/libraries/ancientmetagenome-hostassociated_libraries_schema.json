{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://spaam-community.github.io/AncientMetagenomeDir/ancientmetagenome-hostassociated/ancientmetagenome-hostassociated_schema.json",
    "type": "array",
    "title": "JSON schema for AncientMetagenomeDir ancient host-associated metagenome data",
    "description": "The JSON schema for AncientMetagenomeDir ancient host-associated metagenome data data",
    "additionalItems": false,
    "items": {
        "$id": "#/items",
        "type": "object",
        "title": "The items schema",
        "description": "An explanation about the purpose of this instance.",
        "default": {},
        "required": [
            "project_name",
            "publication_doi",
            "sample_name",
            "archive",
            "archive_project",
            "archive_sample_accession",
            "sequencing_center",
            "library_name",
            "strand_type",
            "library_polymerases",
            "library_treatment",
            "library_concentration",
            "instrument_model",
            "library_layout",
            "cycles",
            "library_strategy",
            "read_count",
            "archive_run_accession",
            "ftp_link"
        ],
        "properties": {
            "project_name": {
                "$id": "#/items/properties/project_name",
                "type": "string",
                "title": "AncientMetagenomeDir key of the publication",
                "description": "Format: surnameYYYY (if duplicate key but different publication, add b,c,d etc. as necessary)",
                "pattern": "^[a-zA-Z]+\\d{4}[b-z]?$",
                "examples": [
                    "Warinner2014",
                    "Muhlemann2018",
                    "Muhlemann2018a"
                ]
            },
            "publication_doi": {
                "$id": "#/items/properties/publication_doi",
                "type": "string",
                "pattern": "^10.\\d{4,9}\\/[^,]+$",
                "title": "Digital Object Identifier (DOI) of the publication",
                "description": "A valid DOI code (not as an URL)",
                "examples": [
                    "10.1038/ng.2906"
                ]
            },
            "sample_name": {
                "$id": "#/items/properties/sample_name",
                "type": "string",
                "title": "Name of the sample",
                "description": "In most cases this should be the name of the host individual",
                "examples": [
                    "B61"
                ]
            },
            "archive": {
                "$id": "#/items/properties/archive",
                "type": "string",
                "title": "Archiving platform",
                "description": "Name of the nucleotide data archiving platform",
                "$ref": "https://spaam-community.github.io/AncientMetagenomeDir/assets/enums/archive.json",
                "examples": [
                    "ENA"
                ]
            },
            "archive_project": {
                "$id": "#/items/properties/archive_project",
                "type": [
                    "string",
                    "null"
                ],
                "title": "Archive project accession platform",
                "description": "Name of the nucleotide data archiving platform",
                "examples": [
                    "PRJNA438985",
                    "mgp13354"
                ]
            },
            "archive_sample_accession": {
                "$id": "#/items/properties/archive_sample_accession",
                "type": [
                    "string",
                    "null"
                ],
                "pattern": "^[\\S]+$",
                "title": "Archive accession number",
                "description": "Samples archive accession numbers, multiple records can be separated with commas. No spaces allowed",
                "examples": [
                    "SRS473742,SRS473743,SRS473744,SRS473745"
                ]
            }
        }
    }
}